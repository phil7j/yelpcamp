<% include ../partials/header %>



<div class="container">
    <h2 class="text-center mb-5">Register a New Campground</h2>
    <div class="row">
        <div style="width: 35%; margin: 0 auto;">
         <form action="/campgrounds" method="POST">
          <div class="form-group">
            <label for="newcampground">New Campground</label>
            <input type="text" class="form-control" name="name" id="newcampground" aria-describedby="textinput" placeholder="Enter name">
            <small id="textinput" class="form-text text-muted">We can't wait to go camping.</small>
          </div>
          
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" name="price" class="form-control" id="price" placeholder="price" min="0.01" step="0.01">
          </div>
          
          <div class="form-group">
            <label for="photolink">Add a picture of your campground</label>
            <input type="text" name="image" class="form-control" id="photolink" placeholder="Image URL">
          </div>
          <div class="form-group">
            <label for="campdescription">Add a description of your campground</label>
            <input type="text" name="description" class="form-control" id="campdescription" placeholder="description">
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
        </div>
    
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <a class="" href="/campgrounds">Go Back to Campgrounds</a>
          </div>
        </form>
  
  </div>
</div>






<% include ../partials/footer %>