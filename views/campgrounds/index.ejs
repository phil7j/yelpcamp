<% include ../partials/header %>

<header class="jumbotron text-center">
<h1>YelpCamp Campgrounds</h1>
<p class="mt-3">View our collection of campgrounds from across North America</p>
<p class=""><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
</header>

<div class="container">
   <div class="card-columns">
  
      <% campgrounds.forEach(function(campground){ %>
      <div class="card">
    <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title text-center"> <%=campground.name %> </h5>
      
    </div>
    <p class="text-center"><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
    </div>
    <% }) %>
  </div>
</div>
  
  
    
    


<% include ../partials/footer %>