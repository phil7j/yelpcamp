<% include ../partials/header %>



<div class="container">
    <h2 class="text-center mb-5">Edit <%= campground.name %></h2>
    <div class="row">
        <div style="width: 35%; margin: 0 auto;">
         <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="newcampground">Edit Name</label>
            <input type="text" class="form-control" name="campground[name]" id="newcampground" aria-describedby="textinput" value="<%= campground.name %>">
            <small id="textinput" class="form-text text-muted">We can't wait to go camping.</small>
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" name="campground[price]" class="form-control" id="price" value="<%= campground.price %>" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <label for="photolink">Edit picture</label>
            <input type="text" name="campground[image]" class="form-control" id="photolink" value="<%= campground.image %>">
          </div>
          <div class="form-group">
            <label for="campdescription">Edit description</label>
            <input type="text" name="campground[description]" class="form-control" id="campdescription" value="<%= campground.description %>">
          </div>
          
    
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <a class="" href="/campgrounds">Go Back to Campgrounds</a>
          </div>
        </form>
  
  </div>
</div>






<% include ../partials/footer %>